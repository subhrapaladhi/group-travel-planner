<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>
<a href="/users/logout" class="btn btn-primary">Logout</a>
<a href="/joinplan" class="btn btn-primary">Join A Plan</a>
<a href="/newplan" class="btn btn-primary">Create A Plan</a>
<br>
<br>
<% if(plans.length > 0) { %>
<table class="table table-bordered">
    <thead>
        <tr>
            <th> Names</th>
            <th> Access Key</th>
        </tr>
    </thead>
    <tbody>
           <% plans.forEach((plan)=>{ %>
        <tr>
            <td><a class="navbar-link" href="/showDetails/<%= plan._id %>"> <%= plan.place%> </a></td>
            <td> <%= plan._id %> </td>
        </tr>
            <% }) %>
    </tbody>
</table>
<% }else{ %>
    <h3>You Havent Made Any plans</h3>
<% } %>